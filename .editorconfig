# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.rs]
# Rustfmt handles this
indent_style = space
indent_size = 4

[*.py]
# Black-compatible Python settings
experimental = true
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{sh,bash}]
shell_variant = bash
indent_size = 2

[*.tf]
indent_size = 2

[*.{css,scss,less}]
indent_style = space
indent_size = 2

[*.{html,htm}]
indent_style = space
indent_size = 2
